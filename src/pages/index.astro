---
import BaseLayout from '../layouts/BaseLayout.astro';

const projectModules = import.meta.glob('./*.md', { eager: true });
const allProjects = Object.values(projectModules);

const saihsProject = {
    url: '/saihs8041/',
    frontmatter: {
        title: '松山工農資一智班級網頁',
        description: '這是我的高職班網，使用了 HTML5 的模板進行客製化，記錄了當時的班級活動。',
        publishDate: '2019-12-05',
        tags: ['HTML']
    }
};

allProjects.push(saihsProject);

allProjects.sort((a, b) => new Date(b.frontmatter.publishDate).getTime() - new Date(a.frontmatter.publishDate).getTime());
---
<BaseLayout title="Vincent's Portfolio">

    <div style="text-align: center; margin-bottom: 4rem;">
        <h1>My Projects</h1>
        <p style="color: var(--subtext0); font-size: 1.2rem;">
            這是我在學習中所建立的一些專案。
        </p>
    </div>
    
    <div class="project-list">
        {allProjects.map(project => (
            <a href={project.url} class="project-card">
                <div class="card-content">
                    <h3>{project.frontmatter.title}</h3>

                    <div class="tag-list">
                        {project.frontmatter.tags && project.frontmatter.tags.map(tag => (
                            <span class="tag-item">{tag}</span>
                        ))}
                    </div>

                    <p class="project-description">{project.frontmatter.description || '點此查看專案詳情'}</p>
                </div>
                
                <p class="project-date">
                    {new Date(project.frontmatter.publishDate).toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' })}
                </p>
            </a>
        ))}
    </div>

</BaseLayout>

<style>
    .project-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    @media (min-width: 768px) {
        .project-list {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .project-list {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .project-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background-color: var(--surface0);
        border: 1px solid var(--surface1);
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.2s ease-in-out, border-color 0.2s ease-in-out;
        overflow: hidden;
    }

    .project-card:hover {
        transform: translateY(-5px);
        border-color: var(--pink);
    }

    .card-content {
        padding: 1.5rem 1.5rem 0;
    }

    .card-content h3 {
        color: var(--pink);
        margin: 0 0 0.75rem 0;
        font-size: 1.25rem;
    }

    .project-description {
        color: var(--subtext1);
        margin: 0.75rem 0 0 0;
        font-size: 0.9rem;
    }

    .project-date {
        color: var(--subtext1);
        font-size: 0.85rem;
        margin: 0;
        padding: 1rem 1.5rem 1.5rem;
        text-align: right;
    }

    .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag-item {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: var(--surface1);
        color: var(--subtext1);
        padding: 2px 10px;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 500;
        line-height: 1.5;
    }
</style>
